body, html
	height: 100%
	margin 0px
	padding 0px

body
	background-image url('/images/background.gif')
	background-size cover
	background-attachment fixed
	font 12px Helvetica, Arial, sans-serif

header
	position absolute
	top 0px
	left 0px
	width 100%
	height 222px
	margin 0px

	background url('/images/header.gif') center top no-repeat
	padding 10px 0px
	text-align center
	z-index 2

section#content
	position relative
	box-sizing border-box
	width 828px
	min-height 100%
	margin 0px auto
	padding 250px 30px 372px

	background url('/images/body.gif') repeat-y
	z-index 1

	#tentacles
		background url('/images/tentacles.gif') no-repeat
		width 984px
		height 372px
